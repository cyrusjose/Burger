<div class='container'>
    <div class='row justify-content-center'>
        <div class='col-sm main-head'>
            <h1>BURGERS!</h1>
        </div>
    </div>

    <div class='container'>
        <div class="row">
            <div class="col">
                <h2>Bugers that are ready for me to eat</h2>

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col">
                <h2>Devoured Burgers</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>




    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="bg">Burger Name:</label>
            <input type="text" id="bg" name="name">
        </div>
        <button class = 'add-burger' type="submit">Add Burger</button>

    </form>

</div>